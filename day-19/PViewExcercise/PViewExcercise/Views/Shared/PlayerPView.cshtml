@model IEnumerable<PViewExcercise.Models.Player>

<h3>Our Players...</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PCountry)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCountry)
            </td>

        </tr>
    }

</table>
